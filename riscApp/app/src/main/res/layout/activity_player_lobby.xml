<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayerLobbyActivity"
    android:background="@drawable/spacebackground">


   <Button
       android:id="@+id/begin"
       android:layout_width="85dp"
       android:layout_height="41dp"
       android:layout_marginTop="328dp"
       android:background="@drawable/oval2"
       android:onClick="beginGame"
       android:text="Blast Off"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.82"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/helpText"
        android:layout_width="458dp"
        android:layout_height="125dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <ProgressBar
       android:id="@+id/ctrlActivityIndicator"
       android:layout_width="120dp"
       android:layout_height="124dp"
       android:layout_marginTop="156dp"
       android:indeterminateOnly="true"
       android:keepScreenOn="true"
       android:visibility="invisible"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.516"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />

   <Button
       android:id="@+id/ready"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="324dp"
       android:onClick="readyGame"
       android:background="@drawable/oval2"
       android:text="Ready"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.23"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>